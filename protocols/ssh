#!/bin/bash

function load_remote_repo {
	if [ "$SESSION" ]; then
		REMOTES_DIR="$SESSION_DIR/remotes";
	else
		REMOTES_DIR=/tmp/backup-ssh-remotes.$$/
		trap 'rm -rf "$REMOTES_DIR"' EXIT
	fi
	mkdir -p $REMOTES_DIR
	REMOTES=$REMOTES_DIR/$REPO_NAME
	if [ ! -e "$REMOTES" ] || [ "$REPO_PATH" != "`cat $REMOTES.path`" ]; then
		echo "$REPO_PATH" >"$REMOTES.path"
		ssh -l "$SSH_USERNAME" "$SSH_URL" "find $REPO_PATH -maxdepth 1 -type d" >$REMOTES
	fi
}

function protocol_load_settings {
	SSH_URL=${1?"URL must be given for $REPO_NAME"};
	SSH_USERNAME=${2?"username must be given for $REPO_NAME"};
	REPO_PATH=${3?"remote path must be given for $REPO_NAME"};
}

function protocol_repo_exists {
	load_remote_repo
	grep -q -F "$REPO_PATH/$*" $REMOTES
}

function protocol_init_repo {
	ssh -l $SSH_USERNAME $SSH_URL "
		set -e
		mkdir -p $REPO_PATH/$*
		cd $REPO_PATH/$*
		git init --bare"
}

function protocol_canonicalize {
	if [ "$#" -gt 0 ]; then
		echo "$SSH_USERNAME@$SSH_URL:$REPO_PATH/$*"
	else
		echo "$SSH_USERNAME@$SSH_URL:$REPO_PATH"
	fi
}

function protocol_push_repo {
	git push --mirror `protocol_canonicalize "$*"`
}
